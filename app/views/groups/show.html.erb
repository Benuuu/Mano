<h1><%= @group.name %></h1>

<h2>Members</h2>
<% @group.users.each do |member| %>
  <p><%= link_to member.name, user_path(member) %></p>
  <%= render :partial => 'shared/instagram', :locals => { :user => member }%>
<% end %>

<% if @group.users.include?(current_user)%>
  <%= link_to 'edit', edit_group_path %>
<% end %>

<%= link_to "Leave group", leave_group_path(@group), :method => :delete, data: { confirm: 'Are you sure?' } %>